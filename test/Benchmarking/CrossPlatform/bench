                REPLCOMMANDS="(begin (optimize-level 3) (load \"%s.scm\") (main))"
                ;;
              r6rs-fixflo)
                REPLCOMMANDS="(begin (optimize-level 2) (load \"%s.scm\") (main))"
                ;;
              r6rs-fixflo-unsafe)
                REPLCOMMANDS="(begin (optimize-level 3) (load \"%s.scm\") (main))"
                ;;
            esac
