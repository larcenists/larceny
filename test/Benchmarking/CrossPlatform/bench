                REPLCOMMANDS="(begin (load \"%s\") (main))"
                ;;
              r6rs)
                INSERTCODE="(declare (usual-integrations)) (define-syntax if-fixflo (syntax-rules () ((if-fixflo yes no) no)))"
                REPLCOMMANDS="(begin (load \"%s\") (main))"
                ;;
            esac
