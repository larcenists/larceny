static void generic_binary_operation( word *globals, int op, cont_t k )
{
  mc_scheme_callout( globals, op, 2, k, 0 );
}

static void generic_unary_operation( word *globals, int op, cont_t k )
{
  mc_scheme_callout( globals, op, 1, k, 0 );
}

