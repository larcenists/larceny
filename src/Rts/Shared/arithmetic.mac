 "mc_cont_exception( globals, EX_ABS, k );"
 "generic_unary_operation( globals, MS_BIGNUM_ABS, k );"
 "mc_cont_exception( globals, EX_ABS, k );"
 "mc_cont_exception( globals, EX_ABS, k );"
 #t
